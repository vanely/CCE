{
  "manifest_version": 3,
  "name": "Claude Code Extractor",
  "version": "1.0.0",
  "description": "Automatically extract and organize Claude code artifacts into your project directory",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "*://claude.ai/*",
            "http://localhost:3030/*"
  ],
  "content_scripts": [{
    "matches": ["*://claude.ai/*", "*://*.claude.ai/*", "*://claude.com/chat/*"],
    "js": ["content-script.js"],
    "run_at": "document_end",
    "all_frames": false
  }],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Claude Code Extractor"
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg"
  }
}
